<div id="reg_form" class="bg_form">
	<h1>Editar Perfil</h1>

	<div class="row">
    <div class="span6">
    	<%= form_for(@user) do |f| %>
    		<%= render 'error_messages' %>

				<%= f.label :nombre, :class => "label_form" %>
		    <%= f.text_field :name, :class => "text_field_form", :required => true  %>

		    <%= f.label :email, :class => "label_form" %>
		    <%= f.text_field :email, :class => "text_field_form" , :required => true %>

		    <%= f.label :telefono, :class => "label_form" %>
		    <%= f.text_field :phone, :class => "text_field_form"  %>

		    <%= f.submit "Guardar", class: "btn btn-primary btn_form"%>
		  <% end %>
		  <hr>
			<p>
				<%= link_to 'Regresar', @user %> -
				<%= link_to 'Cambiar contraseÃ±a', password_user_path(@user) %>
			</p>
		</div>
  </div>
</div>