<%= form_for(@evaluation) do |f| %>
  <% if @evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
      <% @evaluation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date, "Fecha",:class => "label_form" %><br />
    <%= f.datepicker :date, :class => "text_field_form" %>
  </div>
  <div class="field">
    <%= f.label :owner_id, "Creada por",:class => "label_form"  %><br />
    <%= f.number_field :owner_id,:class => "text_field_form"%>
  </div>
  <div class="field">
    <%= f.label :evaluation_type_id,"Tipo de evaluacion",:class => "label_form" %><br />
    <%= f.number_field :evaluation_type_id,:class => "text_field_form" %>
  </div>
  <div class="field">
    <%= f.label :notes,"Observaciones",:class => "label_form" %><br />
    <%= f.text_area :notes, :class => "text_field_form", :size => "50x10"  %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary btn_form" %>
  </div>
  <hr>
<% end %>
